{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "typeRoots": [
      "./types"
    ],
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  // 指定需要编译的文件匹配模式
  "include": [
    "types/**/*.d.ts"
  ],
  // 排除 不需要编译的文件
  "exclude": [
    "node_modules"
  ]
}
